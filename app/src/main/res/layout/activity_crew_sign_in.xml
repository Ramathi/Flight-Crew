<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crew_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a2014001.w1583045.com.flightcrew.startUpPage">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:id="@+id/txtCrewEmail"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/txtCrewEmail"
        android:layout_alignStart="@+id/txtCrewEmail"
        android:id="@+id/txtCrewPW"
        android:hint="Password" />

    <Button
        android:text="Sign in "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdminSign_In"
        android:layout_below="@+id/txtCrewPW"
        android:layout_alignStart="@+id/txtCrewPW"
        android:layout_alignEnd="@+id/txtCrewPW"
        android:onClick="SignIn" />

    <TextView
        android:text="Not registered? SIGN UP here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCrewPW"
        android:layout_marginTop="90dp"
        android:id="@+id/txtSignUp"
        android:layout_alignStart="@+id/btnAdminSign_In"
        android:textAlignment="center" />
</RelativeLayout>
